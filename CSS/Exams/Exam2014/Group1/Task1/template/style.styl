html, body 
	font-family: "Open Sans", "Helvetica Neue", Helvetica, Arial, sans-serif;

#wrapper 
	width 960px
	margin 0 auto

.clear 
	clear: both

body
	margin 0
	padding 0

header, #searchBar
	font-size 14px
	
header
	background-image url('images/header-bg.png')
	background-repeat repeat
	
	h1
		text-transform uppercase
		color #575E5B
		font-size 16px
		float left
		margin-top 15px
		margin-bottom 15px
		margin-left 15px
	
#nav 
	ul
		list-style-type none
		float right
		margin-top 15px
		margin-bottom 15px
		margin-right 15px
	
		li
			display inline-block
			color #575E5B

	
#searchBar
	background-color #000000
	color #C6C6C6
	
	a
		color #C6C6C6
		text-decoration none
		
	#archives
		float left
		margin 10px
		
	#search
		float right
		margin 10px
		
#content
	h1
		font-size 24px
		color #575E5B
		
	article
		font-size 14px
		color #575E5B

		
    